<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="ploneglossary">

  <body>

    <!-- The PloneGlossary in box -->
  
      <dl metal:define-macro="portlet"
          id="portlet-glossary" class="portlet"
           tal:define="gtool nocall:portal/portal_glossary;
                       show_portlet gtool/showPortlet;
                       definitions request/ploneglossary_definitions|nothing"
           tal:condition="python:show_portlet and definitions">
        <dt class="portletHeader">
          <span class="portletTopLeft"/>
          <span i18n:translate="heading_related_terms">Related terms</span>
          <span class="portletTopRight"/>
        </dt>
        
        <dd class="portletItem lastItem">
          <div  id="portlet-glossary-content"></div>
          <span class="portletBottomLeft"/>
          <span class="portletBottomRight"/>
        </dd>
      </dl>

  </body>

</html>
