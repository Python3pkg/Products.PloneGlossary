<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ploneglossary">
      
  <body>
    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="main"
                      tal:define="text here/getDefinition;
                                  len_text python:len(text);
                                  variants here/getVariants">
        <div id="glossary-definition">
          <h1 tal:content="here/title_or_id" 
              class="documentFirstHeading">
            Title or id
          </h1>
      
          <div metal:use-macro="here/document_actions/macros/document_actions">
              Document actions (print, sendto etc)
          </div>
      
          <div tal:content="structure text" />
    
          <tal:variants tal:condition="variants">
            <h3 i18n:translate="heading_variants">Variants</h3>
            <ul>
                <li tal:repeat="variant variants" tal:content="variant" />
            </ul>
          </tal:variants>
      
          <div metal:use-macro="here/document_byline/macros/byline">
            Get the byline - contains details about author and modification date.
          </div>
          
        </div>
      </tal:main-macro>
    </metal:main>
  </body>
</html>
